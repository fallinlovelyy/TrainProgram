<!--pages/userinfo/PassengerInfo/AddPassenger/AddPassenger.wxml-->
<!--pages/index/UserRegister/UserRegister/UserRegister.wxml-->
<view class="weui-cells weui-cells_after-title">
	<view class="weui-cells__title">基本信息</view>
	<view class="weui-cell weui-cell_active">
		<view class="weui-cell__hd">
			<view class="weui-label">姓名</view>
		</view>
		<view class="weui-cell__bd">
			<input class="weui-input" placeholder="请输入姓名" bindchange="changeName"/>
		</view>
	</view>
	<view class="weui-cell weui-cell_active">
		<view class="weui-cell__hd">
			<view class="weui-label">性别</view>
		</view>
		<view class="weui-cell__bd">
			<input class="weui-input" placeholder="请输入性别" bindchange="changeSex"/>
		</view>
	</view>
	<view class="weui-cell weui-cell_active">
		<view class="weui-cell__hd">
			<view class="weui-label">身份证号</view>
		</view>
		<view class="weui-cell__bd">
			<input class="weui-input" placeholder="请输入身份证号" bindchange="changeIdNumber"/>
		</view>
	</view>
</view>
<view class="page__bd page__bd_spacing submit">
	<button class="weui-btn" type="primary" bindtap="AddPassenger">添加</button>
</view>

