<!--pages/userinfo/PassengerInfo/PassengerInfo.wxml-->
<!--pages/userinfo/UserIdInfo/UserIdInfo.wxml-->
<view class="weui-cells weui-cells_after-title">
	<view class="weui-cells__title">当前用户</view>
	<navigator url="./ChangePassengerInfo?changeWhat=Name" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
		<view class="weui-cell__bd">姓名</view>
		<view class="weui-cell__ft weui-cell__ft_in-access">{{PassengerInfo.Name}}</view>
	</navigator>
	<navigator url="./ChangePassengerInfo?changeWhat=Sex" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
		<view class="weui-cell__bd">性别</view>
		<view class="weui-cell__ft weui-cell__ft_in-access">{{PassengerInfo.Sex}}</view>
	</navigator>
	<navigator url="./ChangePassengerInfo?changeWhat=IdNumber" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
		<view class="weui-cell__bd">身份证号</view>
		<view class="weui-cell__ft weui-cell__ft_in-access">{{PassengerInfo.IdNumber}}</view>
	</navigator>
  <view class="weui-cells__title">其他乘车人</view>
</view>
<view class="page__bd page__bd_spacing submit">
	<button class="weui-btn" type="primary" bindtap="AddPassenger">添加乘车人</button>
</view>